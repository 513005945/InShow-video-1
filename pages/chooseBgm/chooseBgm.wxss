/**搜索框样式*/

.wxSearch-section {
  background-color: #fff;
  padding: 5px 10px;
  border: 1px #eee solid;
}

.wxSearch-pancel {
  display: flex;
  flex-direction: row;
}

.wxSearch-input {
  flex: 8;
  background-color: #eee;
  padding: 5px 10px;
}

.wxSearch-button {
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}

/**轮播图样式*/

swiper {
  margin-top: 1rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/**使用控件的样式*/

.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-top: 10rpx;
  padding: 10rpx;
}

audio {
  width: 100%;
  line-height: 0;
  margin-left: 6%;
}

.button {
  background-color: #e05757; /* Green */
  border: none;
  color: white;
  text-align: center;
  text-decoration: none;
  font-size: 12px;
  /* display: none;*/
  margin: 0 auto;
  cursor: pointer;
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
  width: 70%;
}

.hide {
  display: none;
}

.show {
  display: block;
}
