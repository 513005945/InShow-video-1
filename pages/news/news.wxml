<!--pages/news/news.wxml-->

 <view class='container-video'>

    <view class='{{SelClass}} {{isSelectedFans}}' bindtap='doSelectFans'>粉丝</view>

    <view class='{{SelClass}} {{isSelectedFollows}}' bindtap='doSelectFollows'>关注</view>
    
</view>

<view class='userinfo' >
<!-- 粉丝页面 -->
<view hidden='{{myFansFalg}}'>
    <!-- <text>1</text> -->
    <view class="weui-search-bar">
   <view class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="请输入查询内容" value="{{wxSearchData.value}}" bindinput="wxSearchInput" bindconfirm="wxSearchConfirm" />
      <view class="weui-icon-clear" wx:if="{{wxSearchData.value.length > 0}}" bindtap="wxSearchClear">
        <icon type="clear" size="14"></icon>
      </view>
    </view>
  </view>
    <view class="weui-search-bar__cancel-btn" bindtap="wxSearchConfirm">
         <text wx:if="{{wxSearchData.value.length>0}}" data-key='search'>搜索</text>
         <text wx:else data-key='back'>返回</text>
     </view>
</view>

<view wx:if="{{myFansList.length>0}}">
<block wx:for="{{myFansList}}" >
        <!-- <image src='{{serverUrl}}{{item.coverPath}}' class='videoImage' mode="aspectFill" bindtap='showVideoInfo' data-arrindex='{{index}}'></image> -->
        <view class='userinfo1'>
        <view class='userinfo2'>
        <image class="one" src='{{item.avatarurl}}'></image>
        <view class='userinfo3'>
        <label class='nickname'>{{item.nickname}}</label>
        <label style='margin-top:10rpx;'>省份 : {{item.province}}</label>
        <label>城市 : {{item.city}}</label>
        </view>
        </view>
        <image class="two" src='../resource/images/cardbg.jpg'></image>
        </view>
    </block>
</view>
<view wx:else class='nofanstips'>
<text >你还没有粉丝哦~</text>
</view>

<!-- -------------------------------- -->
</view>


<!-- 关注页面 -->
<view hidden='{{myFollowsFalg}}'>
    <!-- <text>2</text> -->
    <view class="weui-search-bar">
   <view class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="请输入查询内容" value="{{wxSearchData.value}}" bindinput="wxSearchInput" bindconfirm="wxSearchConfirm" />
      <view class="weui-icon-clear" wx:if="{{wxSearchData.value.length > 0}}" bindtap="wxSearchClear">
        <icon type="clear" size="14"></icon>
      </view>
    </view>
  </view>
    <view class="weui-search-bar__cancel-btn" bindtap="wxSearchConfirm">
         <text wx:if="{{wxSearchData.value.length>0}}" data-key='search'>搜索</text>
         <text wx:else data-key='back'>返回</text>
     </view>
</view>
<view wx:if="{{myFollowsList.length>0}}">
<block  wx:for="{{myFollowsList}}" >
        <!-- <image src='{{serverUrl}}{{item.coverPath}}' class='videoImage' mode="aspectFill" bindtap='showVideoInfo' data-arrindex='{{index}}'></image> -->
        <view class='userinfo1'>
        <view class='userinfo2'>
        <image class="one" src='{{item.avatarurl}}'></image>
        <view class='userinfo3'>
        <label class='nickname'>{{item.nickname}}</label>
        <label style='margin-top:10rpx;'>省份 : {{item.province}}</label>
        <label>城市 : {{item.city}}</label>
        </view>
        </view>
        <image class="two" src='../resource/images/timg2.jpg'></image>
        </view>
    </block>
</view>
<view wx:else class='nofanstips'>
<text >你还没有关注的人哦~</text>
</view>

<!-- -------------------------------- -->
</view>
</view>